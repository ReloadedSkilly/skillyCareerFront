{#
Page - evaluation
invision:3.1 & 3.2
#}

{% extends 'layout.twig' %}

{% block content %}
<div class="container padding-block--base padding-container-bottom">

    <main class="relative">

        <div class="bg--white padding-content">

            <!-- evaluation header -->
            <div class="evaluation-header display-flex align-items--center justify-content--space-between">

                <!-- user info -->
                <div class="user-header display-flex align-items--center">
                    <img src="./assets/img/icons/profil_small.svg" alt="profil">
                    <div class="user-info">
                        <h1 class="font-size--sm">{{user.firstname}} {{user.lastname}}<br/> {{user.job}}</h1>
                    </div>
                </div>

                <!-- step by step -->
                <div class="evaluation-step display-flex align-items--center">
                    <h2 class="text-uppercase blue font-size--base font-weight--semibold">Auto-évaluation</h2>
                    <div class="step-wrapper display-flex align-items--center">
                        <div class="step-number active">
                            <span>1</span>
                        </div>
                        <div class="step-number">
                            <span>2</span>
                        </div>
                        <div class="step-number">
                            <span>3</span>
                        </div>
                    </div>
                </div>

            </div>

            <!-- title section -->
            <div class="section-title text-center padding-block--base">

                <img src="./assets/img/capR.svg" alt="capacité relationnelles">
                <h3 class="font-size--base">Capacités relationnelles</h3>
                <p class="font-size--sm darkgray">Capacité à communiquer avec vos collègues,<br/> avec votre hiérarchie.</p>

                <!-- tips box -->
                {% include 'partials/tips.twig' %}

            </div>

            <!-- evaluation table -->

            <form action="" method="post">

                <div class="custom-table evaluation-grid">

                    <div class="table-header">
                        {% set levels = ['NC',0,1,2,3] %}
                        <div class="table-cell-empty"></div>
                        <div class="table-level">
                            {% for level in levels %}

                            <div class="table-cell">{{level}}</div>

                            {% endfor %}
                        </div>

                    </div>

                    <div class="table-body">

                        {% set count = 0 %}

                        <!-- loop capacities -->
                        {% for capacity in capacities %}

                        <div class="table-line">

                            <div class="table-title">
                                {{capacity}}
                            </div>
                            <div class="table-answer">

                                {% for i in 0..4%}
                                <div class="custom-radio">
                                    <span class="level-responsive">{{levels[i]}}</span>
                                    <label>
                                        <input type="radio" name="radio-group-{{count}}">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                {% endfor %}

                                {% set count = count +1 %}

                            </div>

                        </div>

                        {% endfor %}

                    </div>

                </div>

            </form>

            <div class="padding-block--md text-center">
                <a class="btn btn-skilly btn--lg btn-rounded btn-blue font-weight--semibold" href="/skillyCareerFront/?p=evaluation-summary">Etape suivante</a>
            </div>

        </div>

    </main>

</div>

<script type="text/javascript">

jQuery(document).ready(function($){

    if ($(window).width() > 480 ) {

        // position helpers box
        function resizeHelper(){
    		var windowWidth = $(document).innerWidth();
    	    var contentWidth = $('.container').innerWidth();
    	    var position=(windowWidth-contentWidth)/2;

    	    $('#tipsBox').css('right',position-14);
    	    $('.tips-side').css('right',position-14);
    	}

        resizeHelper();

        $(window).on('resize', function(){
            resizeHelper();
        });

    }

});

</script>

{% endblock %}
